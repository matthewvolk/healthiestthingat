<% include ./partials/header.ejs %>

<main>
  <section class="hero text-center">
      <div class="container-sm">
          <div class="hero-inner">

              <!-- Hero Main Text -->
              <h1 class="hero-title h2-mobile mt-0 is-revealing">Find the healthiest food at your favorite restaurant</h1>
              <p class="hero-paragraph mt-0 is-revealing">Type in the name of a restaurant to get started:</p>

              <!-- Hero Main Form -->
              <form id="searchForm" class="hero-form newsletter-form field field-grouped is-revealing" method="POST" action="/search">
                  <div class="control control-expanded">
                      <input id="mainSearchInputField" class="input" type="search" name="search" placeholder="Try searching 'Burger King' or 'McDonald's'">
                      </div>
                  <div class="control">
                      <input class="button button-primary button-block button-shadow" href="#" value="Submit" type="Submit"/>
                  </div>
              </form>

              <!-- Featured Restaurants List -->
              <div class="hero-browser">
                  <div class="hero-browser-inner is-revealing first">
                      <!-- TODO:
                      1. Separate inline styles into CSS folder
                      2. Click a card to send data to server
                      -->
                      <h2 style="margin-top:55px;margin-bottom:0;font-size:1.25rem;">or, click a restaurant below:</h2>
                      <br>
                      <div class="restaurant-card" style="margin-bottom: 3rem;">
                          <a href="/" class="restaurant-link">
                              <img style="margin: 0 auto;" data-restaurant-image="Burger King" width="150" height="150" alt="" src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3a/Burger_King_Logo.svg/2000px-Burger_King_Logo.svg.png">
                          </a>
                          <h5>Burger King</h5>
                      </div>
                  </div>

                  <div class="hero-browser-inner is-revealing">
                      <div class="restaurant" style="margin-bottom: 3rem;">
                          <a href="/" class="restaurant-link">
                              <img style="margin: 0 auto;" data-restaurant-image="McDonald's" width="150" height="125" alt="" src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/36/McDonald%27s_Golden_Arches.svg/2000px-McDonald%27s_Golden_Arches.svg.png">
                          </a>
                          <h5>McDonald's</h5>
                      </div>
                  </div>

                  <div class="hero-browser-inner is-revealing">
                      <div class="restaurant" style="margin-bottom: 3rem;">
                          <a href="/" class="restaurant-link">
                              <img style="margin: 0 auto;" data-restaurant-image="Taco Bell" width="125" height="150" alt="" src="https://upload.wikimedia.org/wikipedia/en/thumb/b/b3/Taco_Bell_2016.svg/1200px-Taco_Bell_2016.svg.png">
                          </a>
                          <h5>Taco Bell</h5>
                      </div>
                  </div>

              </div>
          </div>
      </div>
  </section>

<% include ./partials/footer.ejs %>
